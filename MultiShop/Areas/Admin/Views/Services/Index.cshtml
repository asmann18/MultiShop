@model List<ServiceGetVM>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Services</h4>
            <p class="card-description">
                <a asp-action="Create" class="btn btn-success text-white">Create</a>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>

                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var slider in Model)
                        {

                            <tr>
                                <td class="py-1">
                                    <h1 class="@slider.IconPath text-primary m-0 mr-3"></h1>

                                </td>
                                <td>
                                    @slider.Name
                                </td>


                                <td>
                                    <a asp-action="Update" asp-route-id="@slider.Id" class="btn btn-warning">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-pencil" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                            <path d="M4 20h4l10.5 -10.5a2.828 2.828 0 1 0 -4 -4l-10.5 10.5v4" />
                                            <path d="M13.5 6.5l4 4" />
                                        </svg>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@slider.Id" class="btn btn-danger">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-circle-minus" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                            <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" />
                                            <path d="M9 12l6 0" />
                                        </svg>
                                    </a>
                                   
                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
                <br />
                @*   <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-end">
                <li class="page-item @(Model.CurrentPage==1 ? "disabled" : "")">
                <a class="page-link" asp-action="index" asp-controller="products" asp-route-page="@(Model.CurrentPage-1)">Previous</a>
                </li>
                @for (int i = 1; i <= Model.PageCount; i++)
                {
                <li class="page-item"><a class="page-link" asp-action="index" asp-controller="products" asp-route-page="@i">@i</a></li>

                }

                <li class="page-item @(Model.CurrentPage==Model.PageCount ? "disabled" : "")">
                <a class="page-link" asp-action="index" asp-controller="products" asp-route-page="@(Model.CurrentPage+1)">Next</a>
                </li>
                </ul>
                </nav> *@
            </div>
        </div>
    </div>
</div>